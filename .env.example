# ===========================================
# Ghostship Environment Variables
# Copy this to .env.local and fill in values
# ===========================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
# Project URL: https://supabase.com/dashboard/project/_
# API Keys: https://supabase.com/dashboard/project/_/settings/api-keys/legacy
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret
# IMPORTANT: This is REQUIRED for subscription updates to work!
# 1. Go to: https://dashboard.stripe.com/webhooks
# 2. Click "Add endpoint" and use: https://your-domain.com/api/webhooks/stripe
# 3. Select events: checkout.session.completed, customer.subscription.updated, customer.subscription.deleted
# 4. Copy the "Signing secret" (starts with whsec_) and paste below:
STRIPE_WEBHOOK_SECRET=

# Resend
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
# Format: "Your App <noreply@yourdomain.com>"
RESEND_FROM_EMAIL="Your App <noreply@yourdomain.com>"

# OpenRouter
# Get this from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Z.AI (GLM Models)
# Get your API key from Z.AI platform
# Used for GLM-4.7 and other Z.AI models
ZAI_API_KEY=your_zai_api_key_here

# Plausible Analytics (optional - only if you want analytics)
# Your domain registered with Plausible
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
